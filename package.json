{
  "name": "kozker-ai-tools-standalone",
  "version": "2.0.0",
  "private": true,
  "description": "Standalone AI-powered tools application for ai.kozker.com - Complete migration from kozker.com",
  "keywords": [
    "ai-tools",
    "business-automation",
    "nextjs",
    "react",
    "typescript",
    "supabase",
    "kozker",
    "standalone-app",
    "cross-domain-auth",
    "migration"
  ],
  "homepage": "https://ai.kozker.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/kozker/ai-tools-standalone"
  },
  "license": "MIT",
  "author": "Kozker Team",
  "scripts": {
    "analyze": "ANALYZE=true npm run build",
    "build": "next build",
    "clean": "rm -rf .next out",
    "deploy:netlify": "npm run build && netlify deploy --prod --dir=.next",
    "deploy:vercel": "vercel --prod",
    "dev": "next dev",
    "export": "next build && next export",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "migrate": "./scripts/migrate-to-ai-domain.sh",
    "start": "next start",
    "test": "echo \"No tests specified\" && exit 0",
    "test-db": "node scripts/test-database-connection.js",
    "type-check": "tsc --noEmit",
    "validate": "node scripts/validate-migration.js"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
